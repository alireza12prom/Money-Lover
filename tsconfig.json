{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "newLine": "crlf",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["./src/types"],
    /* Type Checking */
    "strict": true
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    // "strictFunctionTypes": true,
    // "strictPropertyInitialization": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
  }
}
